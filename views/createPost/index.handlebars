<div class="container">

  <div class="row main-title">
    CREATE NEW POST
    <div class="line"></div>
  </div>


  <div class="row">
    <!-- post body -->
    <div class="col m9 forum-col">
      <div class="row">

        <form class="col s12">
          <div class="row">
            <div class="input-field col s12">
              <input placeholder="Title" id="post_title" type="text">
              <label for="post_title" id="textarea1">Post Title</label>
            </div>

            <!-- need to initialize in jquery -->
            <div class="input-field col s12">
              <select class="browser-default" id="topic_name">
                <option value="" disabled selected>Choose Topic</option>
                <option value="HTML">HTML</option>
                <option value="CSS">CSS</option>
                <option value="javascript">Javascript</option>
                <option value="api AJAX">API/AJAX</option>
                <option value="mysql">mySQL</option>
              </select>
            </div>

            <div class="input-field col s12">
              <textarea id="textarea1" class="materialize-textarea" placeholder="Description (Required)"></textarea>
            </div>

            <button class="btn waves-effect waves-light" type="submit" name="action">Submit
              <i class="material-icons right">send</i>
            </button>

          </div>
        </form>

      </div>
    </div>

    <!-- sidebar -->
    <div class="col m3">
      {{> sidebar}}
    </div>

  </div>
</div>